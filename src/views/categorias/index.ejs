<h1>Listado de Categorías</h1>

<a class="button button--primary" href="/categorias/create"
  >Crear una categoría</a
>

<section class="listados">
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach(categoria => { %>
      <tr>
        <td>
          <a href="/categorias/<%= categoria.id %>"><%= categoria.name %></a>
        </td>
        <td class="cell-inline">
          <a
            class="button button--primary"
            href="/categorias/<%= categoria.id %>/edit"
            >Edit</a
          >
          <form
            class="form-delete"
            action="/categorias/<%= categoria.id %>?_method=DELETE"
            method="post"
          >
            <button class="button button--danger" type="submit">Borrar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<script>
  document.addEventListener("submit", (event) => {
    event.preventDefault();

    if (event.target.classList.contains("form-delete")) {
      if (confirm("¿Esta seguro?")) {
        event.target.submit();
      }
    }
  });
</script>